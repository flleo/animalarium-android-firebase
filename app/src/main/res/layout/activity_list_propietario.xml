<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListPropietarioActivity">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <ImageView
            android:id="@+id/imageView_list_propietario"
            android:layout_width="104dp"
            android:layout_height="110dp"
            android:visibility="visible"
            app:srcCompat="@drawable/image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/propietario_list_propietario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageButton_item"
                android:text="propietario"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mascotas_list_propietario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/mascota"
                android:layout_toRightOf="@+id/imageButton_item"
                android:text="mascotas" />

            <TextView
                android:id="@+id/telefono1_list_propietario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageButton_item"
                android:text="Telefono1" />


            <TextView
                android:id="@+id/telefono2_list_propietario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageButton_item"
                android:text="Telefono2" />


            <TextView
                android:id="@+id/email_list_propietario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageButton_item"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageButton_item"
                android:layout_weight="1"
                android:text="Email" />


        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>